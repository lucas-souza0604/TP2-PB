    private void somaActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        int numero_um;
        numero_um = Integer.parseInt(num1.getText());
        int numero_dois;
        numero_dois = Integer.parseInt(num2.getText());
        
        int soma = numero_um + numero_dois;
        resultado.setText(soma+"");
        System.out.println(soma);
        
    }                                    

    private void sub1ActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        int numero_um;
        numero_um = Integer.parseInt(num1.getText());
        int numero_dois;
        numero_dois = Integer.parseInt(num2.getText());
        
        int sub = numero_um - numero_dois;
        resultado.setText(sub+"");
        System.out.println(sub);
    }                                    

    private void multi1ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        int numero_um;
        numero_um = Integer.parseInt(num1.getText());
        int numero_dois;
        numero_dois = Integer.parseInt(num2.getText());
        
        int multi = numero_um * numero_dois;
        resultado.setText(multi+"");
        System.out.println(multi);
    }                                      

    private void multiActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        int numero_um;
        numero_um = Integer.parseInt(num1.getText());
        int numero_dois;
        numero_dois = Integer.parseInt(num2.getText());
        
        int div = numero_um / numero_dois;
        resultado.setText(div+"");
        System.out.println(div);
    }                                     

